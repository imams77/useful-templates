# Example environment variables for docker-compose
# Copy this to `.env` and fill in secure values. DO NOT commit `.env` to your repository.

# MySQL
MYSQL_ROOT_PASSWORD=change_me
MYSQL_USER=wordpress
MYSQL_PASSWORD=change_me
MYSQL_DATABASE=wordpress

# WordPress
WORDPRESS_DB_PASSWORD=change_me
WORDPRESS_DB_NAME=wordpress
WORDPRESS_DB_USER=wordpress

# MongoDB
MONGO_INITDB_ROOT_USERNAME=admin
MONGO_INITDB_ROOT_PASSWORD=change_me
ME_CONFIG_MONGODB_ADMINUSERNAME=admin
ME_CONFIG_MONGODB_ADMINPASSWORD=change_me
ME_CONFIG_BASICAUTH_USERNAME=admin
ME_CONFIG_BASICAUTH_PASSWORD=change_me

# PostgreSQL
POSTGRES_PASSWORD=change_me
PGADMIN_DEFAULT_EMAIL=admin@example.com
PGADMIN_DEFAULT_PASSWORD=change_me
